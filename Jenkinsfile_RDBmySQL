pipeline {
  agent { dockerfile true }
  environment {
    DB_CREDS=credentials('rdb-mysql-db-credentials')
  }
  stages {
    stage('Status') {
      steps {
   
        sh 'liquibase status --url=jdbc:mysql://mysqldb2.c5kvdhfba2on.ap-south-1.rds.amazonaws.com:3306/my_app?autoReconnect=true&useSSL=false --changeLogFile=my_app-wrapper.xml  --username=$DB_CREDS_USR --password=$DB_CREDS_PSW'
   
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url=jdbc:mysql://mysqldb2.c5kvdhfba2on.ap-south-1.rds.amazonaws.com:3306/my_app --changeLogFile=my_app-wrapper.xml --username=$DB_CREDS_USR --password=$DB_CREDS_PSW'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
